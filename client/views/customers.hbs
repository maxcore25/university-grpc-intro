<html lang='en'>

  <head>
    <meta charset='utf-8' />
    <title>Product Shop (gRPC + Node.js)</title>
    <link
      rel='stylesheet'
      href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'
      integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T'
      crossorigin='anonymous'
    />
  </head>

  <body>
    <div class='container'>
      <div class='py-5 text-center'>
        <h1>Product Shop (gRPC + Node.js)</h1>
      </div>

      <table class='table' id='products_table'>
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Amount</th>
            <th>Was bought</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          {{#each results}}
            <tr>
              <td>{{id}}</td>
              <td>{{name}}</td>
              <td>{{amount}}</td>
              <td>{{wasBought}}</td>
              <td>
                <a
                  href='javascript:void(0);'
                  class='btn btn-sm edit btn btn-warning'
                  data-id='{{id}}'
                  data-name='{{name}}'
                  data-amount='{{amount}}'
                  data-wasBought='{{wasBought}}'
                >Edit</a>
                <a
                  href='javascript:void(0);'
                  class='btn btn-sm btn-outline-danger remove'
                  data-id='{{id}}'
                >Remove</a>
              </td>
            </tr>
          {{else}}
            <tr>
              <td colspan='5' class='text-center'>No data to display.</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <button
        class='btn btn-success float-right'
        data-toggle='modal'
        data-target='#newproductModal'
      >Create a new product</button>
    </div>

    <!-- New Product Modal -->
    <form action='/save' method='post'>
      <div class='modal fade' id='newproductModal' role='dialog'>
        <div class='modal-dialog' role='document'>
          <div class='modal-content'>
            <div class='modal-header'>
              <h4 class='modal-title'>New product</h4>
              <button type='button' class='close' data-dismiss='modal'>
                <span>&times;</span>
              </button>
            </div>
            <div class='modal-body'>
              <div class='form-group'>
                <input
                  type='text'
                  name='name'
                  class='form-control'
                  placeholder='Name'
                  required='required'
                />
              </div>

              <div class='form-group'>
                <input
                  type='number'
                  name='amount'
                  class='form-control'
                  placeholder='Cost'
                  required='required'
                />
              </div>

              <div class='form-group'>
                <input
                  type='number'
                  name='wasBought'
                  class='form-control'
                  placeholder='Amount'
                  required='required'
                />
              </div>
            </div>
            <div class='modal-footer'>
              <button
                type='button'
                class='btn btn-outline-secondary'
                data-dismiss='modal'
              >Close</button>
              <button type='submit' class='btn btn-success'>Create</button>
            </div>
          </div>
        </div>
      </div>
    </form>

    <!-- Edit Product Modal -->
    <form action='/update' method='post'>
      <div class='modal fade' id='editproductModal' role='dialog'>
        <div class='modal-dialog' role='document'>
          <div class='modal-content'>
            <div class='modal-header'>
              <h4 class='modal-title'>Edit Product</h4>
              <button type='button' class='close' data-dismiss='modal'>
                <span>&times;</span>
              </button>
            </div>
            <div class='modal-body'>
              <div class='form-group'>
                <input
                  type='text'
                  name='name'
                  class='form-control name'
                  placeholder='Name'
                  required='required'
                />
              </div>

              <div class='form-group'>
                <input
                  type='number'
                  name='amount'
                  class='form-control'
                  placeholder='Cost'
                  required='required'
                />
              </div>

              <div class='form-group'>
                <input
                  type='number'
                  name='wasBought'
                  class='form-control wasBought'
                  placeholder='Amount'
                  required='required'
                />
              </div>
            </div>
            <div class='modal-footer'>
              <input type='hidden' name='id' class='product_id' />
              <button
                type='button'
                class='btn btn-outline-secondary'
                data-dismiss='modal'
              >Close</button>
              <button type='submit' class='btn btn-warning'>Update</button>
            </div>
          </div>
        </div>
      </div>
    </form>

    <!-- Remove Product Modal -->
    <form id='add-row-form' action='/remove' method='post'>
      <div
        class='modal fade'
        id='removeproductModal'
        role='dialog'
        aria-labelledby='myModalLabel'
      >
        <div class='modal-dialog'>
          <div class='modal-content'>
            <div class='modal-header'>
              <h4 class='modal-title'>Remove Product</h4>
              <button type='button' class='close' data-dismiss='modal'><span
                >&times;</span></button>
            </div>
            <div class='modal-body'>
              Are you sure?
            </div>
            <div class='modal-footer'>
              <input
                type='hidden'
                name='product_id'
                class='form-control product_id_removal'
                required='required'
              />
              <button
                type='button'
                class='btn btn-outline-secondary'
                data-dismiss='modal'
              >Close</button>
              <button type='submit' class='btn btn-danger'>Remove</button>
            </div>
          </div>
        </div>
      </div>
    </form>

    <script
      src='https://code.jquery.com/jquery-3.3.1.slim.min.js'
      integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo'
      crossorigin='anonymous'
    ></script>
    <script
      src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js'
      integrity='sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM'
      crossorigin='anonymous'
    ></script>
    <script>
      $(document).ready(function () { $('#products_table').on('click', '.edit',
      function () { $('#editproductModal').modal('show');
      $('.product_id').val($(this).data('id'));
      $('.name').val($(this).data('name'));
      $('.amount').val($(this).data('amount'));
      $('.wasBought').val($(this).data('wasBought')); }).on('click', '.remove',
      function () { $('#removeproductModal').modal('show');
      $('.product_id_removal').val($(this).data('id')); }); });
    </script>
  </body>

</html>